    "autoprefixer": "^10.4.14",
    "binode": "^1.0.5",
    "c8": "^7.13.0",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "happy-dom": "^8.9.0",
    "jsdom": "^22.1.0",
    "msw": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.6",
    "prettier-plugin-sql": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "prisma": "^4.11.0",
